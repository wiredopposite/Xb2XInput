{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Debug x64",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}/Xb2XInput.sln",
                "/p:Configuration=Debug",
                "/p:Platform=x64",
                "/v:minimal"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "Build Release x64",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}/Xb2XInput.sln",
